{
  "name": "vue3-template",
  "version": "1.0.0",
  "private": true,
  "description": "基于 Vue3、TypeScript、Element-Plus、Pinia 和 Vite 等主流技术的系统.",
  "scripts": {
    "dev": "vite",
    "dev:mock": "cross-env USE_MOCK=true vite",
    "build:prod": "vue-tsc --noEmit && vite build",
    "build:test": "vue-tsc --noEmit && vite build --mode test",
    "preview:prod": "pnpm build:stage && vite preview",
    "preview:test": "pnpm build:prod && vite preview --mode test",
    "prettier": "prettier --write  \"src/**/*.{js,jsx,ts,tsx,json,css,less,scss,vue,html,md}\" --cache",
    "lint:eslint": "eslint --fix --max-warnings 0 \"{src,mock}/**/*.{vue,js,jsx,ts,tsx}\" --cache --cache-location node_modules/.cache/eslint/",
    "lint:stylelint": "stylelint --fix \"src/**/*.{html,vue,postcss,css,scss,less}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint": "pnpm prettier && pnpm lint:eslint && pnpm lint:stylelint",
    "commit": "cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.3.4",
    "dayjs": "^1.11.7",
    "element-plus": "^2.3.0",
    "js-cookie": "^3.0.1",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.33",
    "screenfull": "^6.0.2",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/js-cookie": "^3.0.3",
    "@types/mockjs": "^1.0.7",
    "@types/node": "^18.15.2",
    "@types/nprogress": "^0.2.0",
    "@types/path-browserify": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.36.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "mockjs": "^1.1.0",
    "postcss": "^8.4.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-html": "^1.5.0",
    "postcss-modules": "^4.3.1",
    "postcss-preset-env": "^7.8.3",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.4",
    "sass": "^1.59.2",
    "stylelint": "^14.16.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.4.0",
    "svgo": "^2.8.0",
    "terser": "^5.16.6",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.14.4",
    "unplugin-icons": "^0.15.3",
    "unplugin-vue-components": "^0.23.0",
    "unplugin-vue-define-options": "^1.2.4",
    "vite": "^4.1.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-svg-loader": "^4.0.0",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,css,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.hbs": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ]
  }
}
